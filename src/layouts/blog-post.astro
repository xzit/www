---
import Layout from "@/layouts/main.astro";
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "keystatic.config";
import { utc } from "@date-fns/utc";
import { format } from "date-fns";
import { es } from "date-fns/locale";

const { ...post } = Astro.props;
const reader = createReader(process.cwd(), keystaticConfig);
const settings = await reader.singletons.settings.read();
---

<Layout
  title={post.data.seo?.value?.title || post.data.title}
  description={post.data.seo?.value?.description || post.data.description}
>
  <div class="mx-auto w-full max-w-7xl p-4 md:px-8 md:py-10">
    <div class="mx-auto flex max-w-2xl flex-col gap-8">
      <div class="flex flex-col gap-4">
        <h1 class="text-4xl">{post.data.title}</h1>
        <p class="text-muted-foreground text-sm">
          Por <a href="/" class="font-bold underline hover:no-underline"
            >{settings?.author}</a
          > â€¢ Actualizado el
          {
            post.data.published &&
              format(new Date(post.data.published), "PP", {
                locale: es,
                in: utc,
              })
          }
        </p>
      </div>
      <div
        class="prose prose-primary text-muted-foreground dark:prose-invert prose-lg mx-auto flex w-full flex-col [&_img]:rounded-xs [&>article>*:first-child]:mt-0 [&>article>*:last-child]:mb-0"
      >
        <slot />
      </div>
    </div>
  </div>
</Layout>
